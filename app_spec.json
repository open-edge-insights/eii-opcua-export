{
	"Module": {
          "Name": "OpcuaExport",
            "Description": "Opcua Export module manifest",
            "SchemaVersion": "0.2",
            "ManifestFile": "${idx:opcuaexport:$EIS_VERSION}",
            "RunAsUser": "$EIS_UID",
            "RunAsGroup": "$EIS_UID",
            "Resources": {
                "CPU": 100,
                "MemoryMB": 100
            },
            "ExecutionEnv": {
                "AppName": "OpcuaExport",
                "ETCD_ENDPOINT": "${datastore.endpoint}",
                "CONFIGMGR_CACERT": "${databucket.cacert}",
                "CONFIGMGR_CERT": "${databucket.cert}",
                "CONFIGMGR_KEY": "${databucket.key}",
                "ETCD_PREFIX": "$ETCD_PREFIX",
                "DEV_MODE": "$DEV_MODE",
                "PROFILING_MODE": "false",
                "ZMQ_RECV_HWM": "50",
                "PubTopics": "opcua_cam_serial1_results,opcua_cam_serial2_results,opcua_point_classifier_results",
                "OpcuaExportCfg": "opcua,0.0.0.0:${ep.opcuapublisher.localport}",
                "SubTopics": "VideoAnalytics/camera1_stream_results,InfluxDBConnector/point_classifier_results",
                "camera1_stream_results_cfg": "zmq_tcp,${ep.va-input.remoteaddress}:${ep.va-input.remoteport}",
                "point_classifier_results_cfg": "zmq_tcp,${ep.pointClsInput.remoteaddress}:${ep.pointClsInput.remoteport}"
            },
            "Endpoints": [
                {
                    "Name": "opcuapublisher",
                    "Endtype": "server",
                    "Port": "65003",
		    "DataType": "messages",
                    "Link": "opcua-pub"
                },
                {
                    "Name": "va-input",
                    "Endtype": "client",
                    "DataType": "messages"
                },
                {
                    "Name": "pointClsInput",
                    "Endtype": "client",
                    "DataType": "messages"
                }
            ]  
	}
}
